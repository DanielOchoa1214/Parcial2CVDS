<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.pdsw.samples.persistence.mybatisimpl.mappers.ConsultaMapper">

    <resultMap type='Consulta' id='ConsultaResult'>
        <id property='id' column='idCONSULTAS'/>
        <result property='fechayHora' column='fecha_y_hora'/>
        <result property='resumen' column='resumen'/>
    </resultMap>

    <select id="getConsultaByPacienteId" resultMap="ConsultaResult">
        SELECT
            c.idCONSULTAS,
            c.fecha_y_hora,
            c.resumen
        FROM
            CONSULTAS as c
        WHERE
            c.PACIENTES_id = #{id} AND c.PACIENTES_tipo_id = #{idType}
    </select>
</mapper>